@model Charity_Project.Database.Stories_tbl

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<!-- Inner Page Main Banner __________________ -->
<div class="admin_banner">
    <div class="opacity">
        <div class="container">
            <h1 style="color:aliceblue;text-align:left;font-weight:bold;">Welcome Admin</h1>
            <a href="/Home/Logout" style="font-size:x-large;color:white;font-weight:bold;float:right" class="btn btn-primary">Logout</a>
        </div> <!-- /.container -->
    </div> <!-- /.opacity -->
</div> <!-- /.inner-page-banner -->
<br />


<div class="container">
    <h2 style="color:black;">Story Details</h2>
    <div class="col-md-12">
        <hr />
        <dl class="dl-horizontal">
            <dt style="color:black;font-size:large">
                @Html.DisplayName("Image")
            </dt>
            <dd>
                <img src="~/Img/@Model.ImageLink" id="user_img" height="100" width="90" style="border:solid" />
            </dd>
         
            
            <dt style="color:black;font-size:large">
                @Html.DisplayName("Video")
            </dt>

            <dd style="color:black;font-size:large">

                <video style=" height:100px" controls="controls" src="~/Videos/@Html.DisplayFor(model => model.VideoLink)"></video>
            </dd>

            <dt style="color:black;font-size:large">
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd style="color:black;font-size:large">
                @Html.DisplayFor(model => model.Title)
            </dd>



            <dt style="color:black;font-size:large">
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd style="color:black;font-size:large">
                @Html.DisplayFor(model => model.Description)
            </dd>

        </dl>

        <div>
            @*@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |*@
            <i class="fa fa-chevron-circle-left" style="font-size:x-large">  @Html.ActionLink("Back to List", "Index") </i>
       </div>
    </div>
</div>


