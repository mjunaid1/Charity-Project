@model IEnumerable<Charity_Project.Database.Stories_tbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<!-- Inner Page Main Banner __________________ -->
<div class="admin_banner">
    <div class="opacity">
        <div class="container">
            <h1 style="color:aliceblue;text-align:left;font-weight:bold;">Welcome Admin</h1>
            <a href="/Home/Logout" style="font-size:x-large;color:white;font-weight:bold;float:right" class="btn btn-primary">Logout</a>
        </div> <!-- /.container -->
    </div> <!-- /.opacity -->
</div> <!-- /.inner-page-banner -->
<br />
<div class="container">
    <div class="col-md-12">
        <span style="color:black; font-size:large;float:right;font-style:normal">
            <i class="fa fa-plus-square" style="font-size:large">
                @Html.ActionLink("Create New", "Create")
            </i>
        </span>
        <table class="table">
            <tr>
                <th style="color:black;">
                    @Html.DisplayName("Image")
                  
                </th>
                <th style="color:black;">
                    @Html.DisplayName("Video")
                </th>
                <th style="color:black;">
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th style="color:black;">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/Img/@item.ImageLink" width="100" height="100" />
                    </td>
                    <td>
                        <video style=" height:100px" controls="controls" src="~/Videos/@Html.DisplayFor(modelItem => @item.VideoLink)"></video>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>

    </div>
