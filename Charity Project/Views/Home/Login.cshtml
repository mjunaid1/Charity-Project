@model Charity_Project.Database.Login_tbl
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout Charity.cshtml";
}

<link href="@Url.Content("~/Content/Charity_Content/")css/Login_style.css" rel="stylesheet" type="text/css" media="all" />


@using (Html.BeginForm("Login", "Home"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <!-- main -->
    <div class="main-agileinfo slider ">
        <div class="items-group">
            <div class="item agileits-w3layouts">
                <div class="block text main-agileits">
                    <span class="circleLight"></span>
                    <!-- login form -->
                    <div class="login-form loginw3-agile">
                        <div class="agile-row">
                            <h2 style="color:black;margin-bottom:15px">Login Form</h2>
                            <div class="login-agileits-top">
                                <form action="#" method="post">

                                    <div class="col-lg-10 col-md-12 col-sm-6">
                                        <div class="formBlock">
                                            <label>Username</label><br />
                                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { } })
                                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <br />
                                    <div class="col-lg-10 col-md-12 col-sm-6">
                                        <div class="formBlock">
                                            <label>Password</label><br />
                                            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { } })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <br />
                                    <div class="col-lg-10 col-md-12 col-sm-6">

                                        <input type="submit" value="Login">
                                    </div>
                                    <div class="col-md-12 col-sm-6">

                                        @if (@ViewBag.n == "Login Successfull...")
                                        {
                                            <div class="success">
                                                @ViewBag.n
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="error">
                                                @ViewBag.n
                                            </div>
                                        }
                                    </div>


                                </form>

                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>



    <!-- //main -->

}







